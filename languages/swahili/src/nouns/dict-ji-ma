
(for number (singular plural)
(df noun
	(flags ji/ma .number)
	(rection (class ji/ma) (number .number) -locative)
	(call prefix ji/ma .number)
	(call nounstem ji/ma)
	(space)
	(seme (number .number)))
(df noun
	(flags ji/ma .number)
	(rection (class ji/ma) (number .number) locative)
	(call prefix ji/ma .number)
	(call nounstem ji/ma)
	(lit ni)
	(space)
	(seme (number .number))))
	

; To add a (JI)/MA-class noun to the dictionary, include these flags:
;    ji/ma    - this is (JI)/MA class nounstem
;
; And (rection -ji) if the noun does not take the ji- prefix in the singular, and (rection ji) if it does.

(df nounstem
	(lit cho)
	(rection ji)
	(seme (head eye)))

(df nounstem
	(lit hoteli)
	(rection -ji)
	(seme (head hotel)))
