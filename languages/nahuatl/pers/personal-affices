;; First person singular
(df personal-affix
	(segments n ?i)
	(flags realis optative object)
	(rection pronominal (person first) (number singular))
	(seme (head referential) (person first) (number singular)))

;; Second person singular
(df personal-affix
	(segments t ?i)
	(flags realis)
	(rection pronominal (person second) (number singular))
	(seme (head referential) (person second) (number singular)))

(df personal-affix
	(segments m ?i)
	(flags object)
	(rection pronominal (person second) (number singular))
	(seme (head referential) (person second) (number singular)))
	
(df personal-affix
	(segments x ?i)
	(flags optative)
	(rection pronominal (person second) (number singular))
	(seme (head referential) (person second)))

;; Third person
(df personal-affix
	(rection referential)
	(flags realis optative)
	(seme (head referential) (person third) (number singular)))

(df personal-affix
	(fork
		((rection -syll) (segments k   ))
		((rection  syll) (segments k ?i)))
	(flags object)
	(rection pronominal (person third))
	(fork
		((seme (head referential) (person third) (number singular)) (rection (number singular)))
		((seme (head referential) (person third) (number plural)) (rection (number plural)))))

;; First person singular
(df personal-affix
	(segments t ?i)
	(flags realis optative)
	(rection pronominal (person first) (number plural))
	(seme (head referential) (person first) (number plural)))
