;; Third person
(df personal-affix
	(rection referential)
	(sandhi full-personal-affix)
	(flags realis optative)
	(seme (head referential) (person third) (number singular)))

(df personal-affix
	(sandhi full-personal-affix)
	(fork
		((lit c) (sandhi -full-personal-affix onset -front))
		((lit qu) (sandhi -full-personal-affix onset front))
		((sandhi onset)(lit qui) (sandhi full-personal-affix onset front)))
	(flags object)
	(rection pronominal (person third))
	(fork
		((seme (head referential) (person third) (number singular)) (rection (number singular)))
		((seme (head referential) (person third) (number plural)) (rection (number plural)))))
