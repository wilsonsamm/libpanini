;; First person singular
(df personal-affix
	(sandhi full-personal-affix)
	(fork
		((lit ni)	(sandhi full-personal-affix))
		((lit n)	(sandhi -full-personal-affix)))
	(flags realis optative object)
	(rection pronominal (person first) (number singular))
	(seme (head referential) (person first) (number singular)))

