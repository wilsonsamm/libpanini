;;; Infinitive verb endings
(df verb-ending
	(flags infinitive 97)
	(lit et)
	(seme -irrealis)
	(block rection verb-ending))
(df verb-ending
	(flags infinitive 113)
	(lit ět)
	(seme -irrealis)
	(block rection verb-ending))
