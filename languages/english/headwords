;;; Nouns

; These rules provide the headwords and translations, respectively, of a dictionary.
(df Headword
	(clues (class nominal) (label n.))
	(flags noun)
	(call noun lemma))
	
(df Translation
	(clues (class nominal))
	(call noun lemma))

; Verb
(df Headword
	(clues (class verbal) (label v.))
	(call verb infinitive))
(df Translation
	(clues (class verbal))
	(call verb infinitive))

; Adjective
(df Headword
	(clues (class adjectival) (label adj.))
	(call adjective))
	
(df Translation
	(clues (class adjectival))
	(call adjective))
