(df noun
	(seme (number singular))
	(constituent nounstem) (space)
	(flags lemma)
	(rection (person he-she-it)))
(df noun
	(seme (number plural))
	(constituent nounstem)
	(lit s) (space)
	(rection countable plural (person they)))

(df nounstem
	(rection -plural)
	(lit east) (seme (head east)))
	
