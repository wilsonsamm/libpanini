; Include these files
(include phrases/cp)
(include phrases/dp)
(include phrases/vp)
(include phrases/pp)
(include phrases/adjp)

(include immutable-particles/complementisers)
(include immutable-particles/determiners)
(include immutable-particles/spatiodeictic)
(include immutable-particles/locative-particles)

(include adjectives/adj)
(include arguments)

(include verbs/dict)
(include verbs/conjugation)
(include verbs/to-be)
(include verbs/modals)

(include nouns/nouns)
(include nouns/species)

(include predicates)

(include prepositions/phrases)

(include pronouns/personal)
(include pronouns/reflexive)

(include punctuation)

(include segments/punctuation)

; Evaluation starts with "main".
(df main
	(rection (complementiser none))
	(call cp)
	(call punctuation sentence-final))

; The words of English (these are generated by the wordlist demo program
; which is useful for feeding the result through a spell checker for 
; example).
(df Word (call noun))
(df Word (call determiner))
(df Word (call verb))
(df Word (call copula))
(df lemma (call noun singular))
(df lemma (call verb infinitive))
