(for adjective
	(
	red pink blue green 
	dead alive
	good bad
	beautiful ugly
	rich poor
	brave
	big small
	)

	(df adjective
		(lit .adjective) (space) (flags predicative) (seme (head .adjective))))

(df adjective
	(lit large) (space)
	(flags predicative)
	(seme (head big)))

(df adjective
	(lit enormous) (space)
	(flags predicative)
	(seme (head big) (degree high)))
