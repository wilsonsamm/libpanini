;;; The personal stem is something you can find on pp. 6 - 7 in Causative Constructions in Ainu.

;; Monovalent personal stems:

; Plain-old monovalent verb
(df personal-stem
	(flags monovalent)
	(constituent verbstem monovalent)
	(space))

; bivalent verb with valency reducing operation
(df personal-stem
	(flags monovalent)
	(constituent prefix valency-reduction)
	(constituent verbstem bivalent)
	(space))

;; Bivalent personal stems

; bivalent verb
;(df personal-stem
;	(flags bivalent)
;	(constituent verbstem bivalent))


