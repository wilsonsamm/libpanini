(df punctuation
	(flags sentence-final)
	(sandhi nospace)
	(lit .)
	(seme -exclamation -interrogative))

(df punctuation
	(flags sentence-final)
	(sandhi nospace)
	(lit !)
	(seme exclamation -interrogative))

(df punctuation
	(flags sentence-final)
	(sandhi nospace)
	(lit ?)
	(seme interrogative))

(segment (underlying space) (sandhi nospace) (sandhiblock))
(segment (underlying space) (sandhi -nospace)(space)(sandhiblock))
